class Solution {
public:
    double myPow(double x, int n) {
         long long N = n;
        double ans=1;
        if(N<0){
            N=(-1)*(N);
        }
       while(N>0){
         if((N&1)) {
            ans*=x;
         }
         N=N>>1;
         x=x*x;
       }
       if(n<0){
        return (1/ans);
       }
     return ans;
    }
};
